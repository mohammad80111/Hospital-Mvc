@model List<Patient>

<link href="~/css/table.css" rel="stylesheet" />



<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<style>
    #button a {
        color: white;
        font-size: 20px;
        text-decoration: none;
    }

  
</style>

<button id="button" type="button" class="btn btn-primary"><a asp-area="" asp-controller="Patient" asp-action="Create">create Patient</a></button>
<div class="container">
    <div class="table-responsive">
        <table class="table table-bordered   table-striped" >
            <thead class="table__head">
                <tr class="winner__table">

                    <th><i class="fa fa-user" aria-hidden="true"></i> Patient Name</th>
                    <th><i class="fa fa-child" aria-hidden="true"></i> Patient Age</th>
                    <th><i class="fa fa-map-marker" aria-hidden="true"></i> City</th>
                    <th><i class="fa fa-user-md" aria-hidden="true"></i> Doctor Name</th>
                    <th><i class="fa fa-pie-chart" aria-hidden="true"></i> Medicine Name</th> 
                    <th><i class="fa fa-pie-chart" aria-hidden="true"></i>How Many Tims Day</th>
                    <th><i class="fa fa-trash" aria-hidden="true"></i> Delete</th>

                </tr>
            </thead>
            @foreach (Patient I in Model)
            {
                <tbody>
                    <tr class="winner__table">
                        <td>@I.PatientName</td>
                        <td>@I.PatientAge</td>
                        <td>@I.City</td>
                        <td>@I.DoctorId</td>
                        <td>@I.MedicineId</td>
                        <td>@I.HowManyTimsDay</td>
                


                        <td><a href="/Patient/Delete/@I.PatientId"><i class="fa fa-trash-o" style="font-size:20px;color:#4F89D4"></i></a></td>

                    </tr>



                </tbody>
            }
        </table>
    </div>
</div>
